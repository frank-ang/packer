# server configuration for packer
#
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	autoindex on; # Enable directory listing for Filecoin Packer packed output.

	root /root/packer/test/output;  # Filecoin Packer output CAR files. TODO use sed variable substitution instead of hardcoding.

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		# First attempt to serve request as file, then
		# as directory, then fall back to displaying a 404.
		# try_files $uri $uri/ =404;
        root   html;
	}

}
